<UserControl x:Class="BfmeFoundationProject.WorkshopStudio.Pages.UpdatePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BfmeFoundationProject.WorkshopStudio.Pages"
             xmlns:sharedUi="clr-namespace:BfmeFoundationProject.SharedUi.Elements;assembly=BfmeFoundationProject.SharedUi"
             mc:Ignorable="d" 
             d:Height="1000" d:Width="1500">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource Segoe UI}" FontSize="30" FontWeight="Thin" Text="UPDATING" Foreground="White"/>
        <sharedUi:ProgressBar x:Name="update_progressBar" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,100" Height="35"/>
    </Grid>
</UserControl>
