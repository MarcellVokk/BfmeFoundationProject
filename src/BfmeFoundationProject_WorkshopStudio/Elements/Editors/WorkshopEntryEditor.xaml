<UserControl x:Class="BfmeFoundationProject.WorkshopStudio.Elements.WorkshopEntryEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BfmeFoundationProject.WorkshopStudio.Elements"
             xmlns:sharedUi="clr-namespace:BfmeFoundationProject.SharedUi.Elements;assembly=BfmeFoundationProject.SharedUi"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch" d:DesignWidth="1000">
    <StackPanel>
        <TextBlock Text="MAIN ACTIONS" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="14" Margin="0,10,0,10"/>
        <StackPanel Orientation="Horizontal">
            <Button Style="{DynamicResource MiniButton}" Click="OnCreateNewUpdate" HorizontalAlignment="Left" Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="4">
                    <Path Stretch="Uniform" Fill="#A5FFFFFF" Stroke="#A5FFFFFF" StrokeThickness="0" Data="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" Width="15" Height="15"/>
                    <TextBlock Text="CREATE NEW UPDATE" Foreground="#A5FFFFFF" FontSize="15" FontWeight="Normal" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <TextBlock Text="OTHER ACTIONS" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="14" Margin="0,10,0,10"/>
        <StackPanel Orientation="Horizontal">
            <Button Style="{DynamicResource MiniButton}" Click="OnTransfer" HorizontalAlignment="Left" Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="4">
                    <Path Stretch="Uniform" Fill="#A5FFFFFF" Stroke="#A5FFFFFF" StrokeThickness="0" Data="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z" Width="15" Height="15"/>
                    <TextBlock Text="TRANSFER" Foreground="#A5FFFFFF" FontSize="15" FontWeight="Normal" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
            <Button Style="{DynamicResource MiniButton}" Click="OnUnlist" HorizontalAlignment="Left" Margin="5,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="4">
                    <Path Stretch="Uniform" Fill="#A5FFFFFF" Stroke="#A5FFFFFF" StrokeThickness="0" Data="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z" Width="15" Height="15"/>
                    <TextBlock Text="UNLIST" Foreground="#A5FFFFFF" FontSize="15" FontWeight="Normal" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <TextBlock Text="PUBLISHED VERSIONS" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="14" Margin="0,15,0,10"/>
        <StackPanel x:Name="versions"/>
    </StackPanel>
</UserControl>
