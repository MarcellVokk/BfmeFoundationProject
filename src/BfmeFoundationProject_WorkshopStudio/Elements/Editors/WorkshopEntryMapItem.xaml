<UserControl x:Class="BfmeFoundationProject.WorkshopStudio.Elements.WorkshopEntryMapItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BfmeFoundationProject.WorkshopStudio.Elements"
             mc:Ignorable="d" 
             Width="347" Height="260">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Background="#19FFFFFF">
        <Image x:Name="image" Width="347" Height="260" Stretch="Fill"/>
        <Grid x:Name="spots"/>
        <TextBlock x:Name="name" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15" IsHitTestVisible="False" FontSize="13" Text="Map name" Foreground="#99FFFFFF"/>
    </Grid>
</UserControl>
