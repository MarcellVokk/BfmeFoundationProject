<UserControl x:Class="BfmeFoundationProject.OnlineKit.Elements.PopupVisualizer"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BfmeFoundationProject.OnlineKit.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="root" Opacity="0" d:Opacity="1" IsHitTestVisible="False">
        <Grid x:Name="background" Background="#99191919" MouseUp="OnMouseUp"/>
        <Grid x:Name="popupBody">
            <local:CornerAccentFrame Darkness="0.6" BackgroundBrush="#FF060808" Margin="-10"/>
            <Border x:Name="content"/>
        </Grid>
    </Grid>
</UserControl>
